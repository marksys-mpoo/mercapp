<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/coluna1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coluna 1"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/coluna3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coluna 3"
        android:textSize="18sp"
        android:layout_marginEnd="21dp"
        android:layout_alignBaseline="@+id/coluna2"
        android:layout_alignBottom="@+id/coluna2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/coluna2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coluna 2"
        android:textSize="18sp"
        android:layout_marginStart="29dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/coluna1" />

</RelativeLayout>
