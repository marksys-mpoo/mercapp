<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_supermercado_auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mercapp.supermercado.gui.CadastroSupermercados">

    <TextView
        android:text="@string/tela_cadastro_busca_dos_Supermercados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etSupTelefone"
        android:hint="@string/hint_numero_telefone_supermercado"
        android:layout_below="@+id/etSupNome"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/botao_cadastrar_supermercados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCadastrarSupermercado"
        android:onClick="cadastrarSupermercadoManual"

        android:layout_below="@+id/etSupTelefone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:text="@string/botao_busccar_supermercado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuscarMercado"
        android:onClick="buscaSupermercadoBD"
        android:layout_below="@+id/supBuscaNome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etSupNome"
        android:hint="@string/hint_nome_supermercado"

        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/botao_voltar_tela_cadastro_e_busca_de_supermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVoltar"
        android:onClick="changeTelaCadatroSupermercadosToTelaAdministrador"
        android:layout_alignBaseline="@+id/btnCadastrarDireto"
        android:layout_alignBottom="@+id/btnCadastrarDireto"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:text="@string/botao_cadastrar_supermercado_direto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCadastrarDireto"
        android:onClick="cadastroDireto"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/linearLayout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/btnBuscarMercado"
        android:layout_alignParentEnd="true">

        <TextView
            android:text="@string/hint_nome_supermercado_buscado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supTextoNome"
            android:textSize="20sp"
            android:layout_below="@+id/btnBuscarMercado"
            android:layout_alignStart="@+id/supTextoTelefone" />

        <TextView
            android:text="@string/hint_telefone_supermercado_buscado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supTextoTelefone"
            android:textSize="20sp"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/supTextoNome"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/supBuscaNome"
        android:hint="@string/hint_busca_supermercado_pelo_nome"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
