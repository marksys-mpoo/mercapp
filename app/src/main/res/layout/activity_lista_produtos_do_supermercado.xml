<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lista_produtos_do_supermercado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mercapp.supermercado.gui.ListaProdutosDoSupermercado">

    // Ainda est√° faltando colocar supemercado no documento String.xml

    <TextView
        android:text="Supermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textAlignment="center"
        android:id="@+id/textView9"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/textview_id_produto_do_supermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/botao_voltar_tela_lista_produtos_do_supermercado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="changeTelaListaProdutosDoSupermercadoToTelaSupermercado"
        android:id="@+id/button10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/textview_idsuper_produto_do_supermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_marginStart="24dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="@string/textview_descricao_produto_do_supermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginStart="60dp" />

    <TextView
        android:text="@string/textview_preco_produto_do_supermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView9"
        android:layout_toStartOf="@+id/textView9"
        android:layout_marginEnd="27dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lista_produtos_do_supermercado"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="21dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
