    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/lista_produtos_geral"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView8" />

    <TextView
        android:text="@string/titulo_lista_produtos"
        android:textStyle="normal|bold"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeTelaListaProdutosToTelaAdmimistrador"
        android:id="@+id/button10"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <!--<TextView-->
        <!--android:text="@string/textview_idsuper_produto"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="20sp"-->
        <!--android:id="@+id/textView7"-->
        <!--android:layout_below="@+id/button10"-->
        <!--android:layout_alignParentEnd="true" />-->

    <TextView
        android:text="@string/textview_descricao_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_marginEnd="48dp"
        android:layout_below="@+id/button10"
        android:layout_alignEnd="@+id/button10" />

    <TextView
        android:text="@string/textview_preco_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView8"
        android:layout_below="@+id/button10"
        android:layout_toStartOf="@+id/button10"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="@string/textview_por_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView12"
        android:layout_below="@+id/button10"
        android:layout_alignEnd="@+id/fab" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:srcCompat="@android:drawable/ic_input_add"
        android:onClick="adcionarProduto"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
