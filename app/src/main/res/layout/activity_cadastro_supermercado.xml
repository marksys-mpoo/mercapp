<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_supermercado_auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mercapp.supermercado.gui.CadastroSupermercados">

    <Button
        android:text="@string/botao_voltar_tela_cadastro_e_busca_de_supermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVoltar"
        android:onClick="changeTelaCadatroSupermercadosToTelaAdministrador"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/tela_cadastro_dos_Supermercados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etSupNome"
        android:hint="@string/hint_nome_supermercado"
        android:layout_below="@+id/etSupLong"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etSupLong"
        android:hint="@string/hint_longitude_supermercado"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/etSupLat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etSupLat"
        android:hint="@string/hint_latitude_supermercado"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:text="@string/hint_latitude_supermercado"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:layout_toStartOf="@+id/supTextoTelefone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:text="@string/hint_longitude_supermercado"
        android:id="@+id/textView10"
        android:layout_below="@+id/etSupLat"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etSupTelefone"
        android:hint="@string/hint_numero_telefone_supermercado"
        android:layout_below="@+id/etSupNome"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/supBuscaNome"
        android:hint="@string/hint_busca_supermercado_pelo_nome"
        android:textAlignment="center"
        android:layout_below="@+id/textView13"
        android:layout_toStartOf="@+id/btnBuscarMercado" />

    <Button
        android:text="@string/botao_cadastrar_supermercado_direto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCadastrarDireto"
        android:onClick="cadastroDireto"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/botao_buscar_supermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuscarMercado"
        android:onClick="buscaSupermercadoBD"
        android:layout_alignTop="@+id/supBuscaNome"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/hint_nome_supermercado_buscado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supTextoNome"
        android:textSize="18sp"
        android:layout_below="@+id/btnBuscarMercado"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/hint_telefone_supermercado_buscado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supTextoTelefone"
        android:textSize="18sp"
        android:layout_below="@+id/btnBuscarMercado"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:text="@string/tela_busca_dos_Supermercados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/btnCadastrarSupermercado"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/botao_cadastrar_supermercados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCadastrarSupermercado"
        android:onClick="cadastrarSupermercadoManual"

        android:layout_marginTop="90dp"
        android:layout_below="@+id/etSupTelefone"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
