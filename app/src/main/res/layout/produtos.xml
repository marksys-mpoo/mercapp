<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iconProduto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/dp_bebidas" />

    <TextView
        android:id="@+id/colunaProduto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_coluna2_produtos"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/iconProduto"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Nome:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView29"
        android:layout_toEndOf="@+id/iconProduto" />

    <TextView
        android:text="Descrição:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textView29"
        android:layout_alignBottom="@+id/iconProduto"
        android:layout_toEndOf="@+id/iconProduto" />

    <TextView
        android:text="Preço:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView29"
        android:layout_toEndOf="@+id/iconProduto" />

    <TextView
        android:id="@+id/colunaProduto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_coluna1_produtos"
        android:textSize="18sp"
        android:layout_above="@+id/colunaProduto2"
        android:layout_alignStart="@+id/colunaProduto2" />

    <TextView
        android:id="@+id/colunaProduto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_coluna3_produtos"
        android:textSize="18sp"
        android:layout_below="@+id/colunaProduto2"
        android:layout_alignStart="@+id/colunaProduto2" />

</RelativeLayout>
