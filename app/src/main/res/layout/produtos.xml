<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/colunaProduto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_coluna3_produtos"
        android:textSize="18sp"
        android:layout_below="@+id/colunaProduto2"
        android:layout_alignStart="@+id/colunaProduto2" />

    <TextView
        android:text="Descrição:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <TextView
        android:text="Preço:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/colunaProduto2"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7" />

    <TextView
    android:id="@+id/colunaProduto2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/textview_coluna2_produtos"
    android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="13dp" />

</RelativeLayout>
